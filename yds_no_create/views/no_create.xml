<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Contacts -->
    <record id="no_create_contacts_form" model="ir.ui.view">
        <field name="name">no.create.contacts.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="options">{'no_open': True, 'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <!-- Sale order -->
    <record id="no_create_sale_order_form" model="ir.ui.view">
        <field name="name">no.create.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/list//field[@name='product_template_id']"
                   position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/list//field[@name='product_uom']"
                   position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <!-- Purchase order -->
    <record id="no_create_purchase_order_form" model="ir.ui.view">
        <field name="name">no.create.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='products']//field[@name='order_line']/list//field[@name='product_id']"
                   position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='products']//field[@name='order_line']/list//field[@name='product_uom']"
                   position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <!-- MRP: BoM -->
    <record id="no_create_bom_form" model="ir.ui.view">
        <field name="name">no.create.bom.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_tmpl_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='components']//field/list//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <!-- MRP: Manufacturing Order -->
    <record id="no_create_manufacturing_order_form" model="ir.ui.view">
        <field name="name">no.create.manufacturing.order.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='bom_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='components']//field/list//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>


        </field>
    </record>

    <!-- MRP: Work Orders list (Odoo 18 uses list) -->
    <record id="no_create_work_order_list" model="ir.ui.view">
        <field name="name">no.create.work.order.list</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='workcenter_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Product -->
    <record id="no_create_product_form" model="ir.ui.view">
        <field name="name">no.create.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='general_information']//field[@name='taxes_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <!-- <xpath expr="//page[@name='general_information']//field[@name='product_tag_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath> -->

            <xpath expr="//page[@name='sales']//field[@name='optional_product_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

            <!-- <xpath expr="//page[@name='purchase']//field[@name='supplier_taxes_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath> -->

            <xpath expr="//page[@name='invoicing']//field[@name='property_account_creditor_price_difference']"
                   position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <!-- Product Supplierinfo list -->
    <record id="no_create_product_seller_list" model="ir.ui.view">
        <field name="name">no.create.product.seller.list</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="purchase.product_supplierinfo_tree_view2"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
            <xpath expr="//list/field[@name='currency_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
        </field>
    </record>

